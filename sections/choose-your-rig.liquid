{{ 'section-choose-your-rig.css' | asset_url | stylesheet_tag }}

<div class="choose-your-rig-section">
  <div class="container page-width">
    <h2 class="section-title">Choose Your Rig</h2>
    <div class="rig-cards">
      {% for block in section.blocks %}
        <div class="rig-card" id={{ block.id }}>
          <div class="card-media">
            {{
              block.settings.video
              | video_tag:
                image_size: '400x',
                autoplay: false,
                loop: true,
                controls: true,
                muted: true,
                class: 'card-video'
            }}
          </div>
          <div class="rig-info" id="content-{{ block.id }}">
            <h2>{{ block.settings.title }}</h2>
            <p class="rig-spec">{{ block.settings.subtitle }}</p>
            <div class="rig-spec extra-specs--hidden" id="extra-specs-{{ block.id }}">
              <hr style="margin-top: 10px; margin-bottom:10px;">
              {{ block.settings.extra_specs }}          
            </div>
          </div>
          
          <div class="buttons">
            <button class="card-button button button--secondary" id="button-{{ block.id }}" onclick="changeContent(this)" >Click to view specs</button>
          </div>
        </div>
      {% endfor %}
    </div>
    {% comment %} <div class="slider">
        <div class="slider-icon chevron-left">{% render 'icon-chevron-left' %}</div>
        <span class="dot" id="dot-0"></span>
        <span class="dot" id="dot-1"></span>
        <span class="dot" id="dot-2"></span>
        <div class="slider-icon chevron-right">{% render 'icon-chevron-right' %}</div>
    </div> {% endcomment %}
  </div>
</div>

<script>
  // centers the scrolling on the middle card in Choose Your Rig section.
  const element = document.getElementsByClassName('rig-card')[1];
  document.getElementsByClassName('rig-cards')[0].scrollLeft = element.offsetLeft;
</script>


{% schema %}
{
  "name": "Choose Your Rig",
  "settings": [],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "settings": [
        {
          "type": "video",
          "id": "video",
          "label": "t:sections.video.settings.video.label"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Card Title"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Card Subtitle"
        },
        {
          "type": "richtext",
          "id": "extra_specs",
          "label": "Extra Specs"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Choose Your Rig",
      "blocks": [
        {
          "type": "card"
        }
      ]
    }
  ]
}
{% endschema %}

